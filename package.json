{
    "name": "passcrack",
    "description": "Simple password strength calculator written in React powered by zxcvbn",
    "version": "0.0.1",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "lint": "eslint \"src/**/*.{ts,tsx,css}\" --fix",
        "start": "npm run lint && react-scripts start",
        "build": "rm -rf build && npm run lint && NODE_ENV=production GENERATE_SOURCEMAP=false react-scripts build"
    },
    "dependencies": {
        "node-sass": "^6.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "zxcvbn": "^4.4.2"
    },
    "devDependencies": {
        "@types/node": "^16.7.13",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@types/zxcvbn": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "eslint": "^7.32.0",
        "eslint-plugin-react": "^7.25.1",
        "react-scripts": "^4.0.3",
        "typescript": "^4.4.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}