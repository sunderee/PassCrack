{
    "name": "passcrack",
    "description": "Simple password strength calculator written in React powered by zxcvbn",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "scripts": {
        "format": "prettier --write \"src/**/*.{ts,tsx,scss}\" --config .prettierrc.json",
        "lint": "eslint \"src/**/*.{ts,tsx,css}\" --fix",
        "prettify": "npm run format && npm run lint",
        "start": "react-scripts start",
        "build": "rm -rf build && npm run prettify && NODE_ENV=production GENERATE_SOURCEMAP=false react-scripts build"
    },
    "dependencies": {
        "@emotion/react": "^11.8.1",
        "@emotion/styled": "^11.8.1",
        "@mui/material": "^5.4.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "zxcvbn": "^4.4.2"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/zxcvbn": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "eslint": "^8.10.0",
        "eslint-plugin-react": "^7.29.2",
        "node-sass": "^7.0.1",
        "prettier": "^2.5.1",
        "react-scripts": "^5.0.0",
        "typescript": "^4.5.5",
        "yarn-upgrade-all": "^0.6.1"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
